<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#E0E0E0"
                android:endColor="#FFFFFF"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF003F" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>


    <item>        
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#E0E0E0"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>