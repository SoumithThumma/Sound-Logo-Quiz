<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#F7F7F7"
                android:startColor="#D7D7D7"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners
                android:radius="35dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>


    <item>        
        <shape>
            <gradient
                
                android:startColor="#87FC70"
                android:endColor="#0BD318"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners
                android:radius="35dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>